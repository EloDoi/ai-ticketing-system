generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  tickets   Ticket[]  // tickets created by this user
  messages  Message[] // messages sent by this user
  createdAt DateTime  @default(now())
}

model Ticket {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  status      String    @default("open")
  user        User?     @relation(fields: [userId], references: [id])
  userId      Int?      // creator of ticket
  messages    Message[] // messages associated with this ticket
  createdAt   DateTime  @default(now())
}

model Message {
  id        Int       @id @default(autoincrement())
  content   String
  ticket    Ticket    @relation(fields: [ticketId], references: [id])
  ticketId  Int
  user      User?     @relation(fields: [userId], references: [id])
  userId    Int?      // optional user who sent the message
  createdAt DateTime  @default(now())
}
